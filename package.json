{
  "name": "smart-storage",
  "version": "0.0.0",
  "packageManager": "pnpm@7.1.0",
  "scripts": {
    "postinstall": "rimraf ./.husky && husky install && pnpm husky:pre-commit-hook && pnpm husky:commit-msg-hook",
    "clean": "pnpx rimraf \"./node_modules\" --impl=native && pnpm -F \"*\" clean",
    "eslint": "eslint . --ext .js,.cjs,.mjs,.ts,.cts,.mts",
    "format": "pnpm -F \"@smart-storage/*\" format",
    "start:vue-demo": "pnpm -F smart-storage-vue-demo start",
    "start:react-demo": "pnpm -F smart-storage-react-demo start",
    "start:docs": "vuepress dev docs",
    "test": "pnpm -F \"@smart-storage/*\" test",
    "test:cov": "pnpm -F \"@smart-storage/*\" test:cov",
    "build": "pnpm -F \"@smart-storage/*\" build",
    "build:docs": "vuepress build docs",
    "build:pages": "pnpm build && pnpm build:docs && node ./scripts/build-pages.js",
    "build-only": "pnpm -F \"@smart-storage/*\" build-only",
    "release": "node ./scripts/release.js",
    "publish:packages": "pnpm -F \"@smart-storage/*\" publish --access public",
    "commit": "cz",
    "commit:lint": "commitlint --edit",
    "husky:pre-commit-hook": "husky add .husky/pre-commit \"pnpm lint-staged\"",
    "husky:commit-msg-hook": "husky add .husky/commit-msg \"pnpm commit:lint\"",
    "lint-staged": "lint-staged",
    "lint-staged:format": "prettier -w",
    "lint-staged:eslint": "eslint",
    "update:deps": "pnpm install && pnpm clean && pnpm install",
    "update:repos": "pnpm update:deps && pnpm build",
    "force-update:deps": "pnpm install && pnpm clean && pnpx rimraf ./pnpm-lock.yaml && pnpm install",
    "force-update:repos": "pnpm force-update:deps && pnpm build"
  },
  "private": true,
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "@rollup/plugin-commonjs": "24.0.0",
    "@rollup/plugin-node-resolve": "15.0.1",
    "@rollup/plugin-terser": "0.3.0",
    "@rollup/plugin-typescript": "11.0.0",
    "@smart-storage-lib/config": "workspace:*",
    "@types/fs-extra": "11.0.1",
    "@types/inquirer": "8.2.5",
    "@types/jest": "29.2.5",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.22.0",
    "eslint-config-airbnb-typescript-prettier": "5.0.0",
    "fs-extra": "11.1.0",
    "husky": "8.0.3",
    "inquirer": "8.2.5",
    "jest": "29.3.1",
    "jest-environment-jsdom": "29.3.1",
    "lint-staged": "13.1.0",
    "live-server": "1.2.2",
    "markdown-it": "8.4.2",
    "prettier": "2.7.1",
    "rimraf": "4.0.7",
    "rollup": "3.10.0",
    "shelljs": "0.8.5",
    "standard-version": "9.5.0",
    "ts-jest": "29.0.5",
    "typescript": "4.9.4",
    "vue": "2.7.14",
    "vuepress": "1.9.2",
    "vuepress-theme-vt": "0.8.1"
  }
}
